---
import { Image } from "astro:assets";
import logo from "/public/assets/images/logo.webp";
---

<nav class="navbar" aria-label="Menú de navegación principal">
  <div class="container">
    <a class="navbar__brand" href="/" aria-label="Inicio">
      <Image
        src={logo}
        alt="Logotipo de Clínica Regenera"
        width={149}
        height={48}
        class="navbar__logo"
        format="webp"
      />
    </a>
    <button
      class="navbar__toggler"
      id="navbarToggler"
      aria-label="Abrir menú de navegación"
      type="button"
    >
      <span class="navbar__toggler-icon"></span>
      <span class="navbar__toggler-icon"></span>
      <span class="navbar__toggler-icon"></span>
    </button>
    <div class="navbar__collapse" id="navbarMenu">
      <ul class="navbar__nav">
        <li class="navbar__item">
          <a class="navbar__link smooth-scroll" href="/#tratamientos"
            >Tratamientos</a
          >
        </li>
        <li class="navbar__item">
          <a class="navbar__link smooth-scroll" href="/#tu-cita">Tu cita</a>
        </li>
        <li class="navbar__item">
          <a class="navbar__link smooth-scroll" href="/#testimonio"
            >Testimonios</a
          >
        </li>
        <li class="navbar__item">
          <a class="navbar__link" href="/sobre-mi">Sobre mí</a>
        </li>
        <li class="navbar__item">
          <a class="navbar__link" href="/contacto">Contacto</a>
        </li>
        <li class="navbar__item">
          <a class="navbar__link" href="/blog/">Blog</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: space-between;
    z-index: 1000;
  }

  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 10px;
  }

  .navbar__brand .navbar__logo {
    width: 149px;
    height: 48px;
  }

  .navbar__toggler {
    background: none;
    border: none;
    cursor: pointer;
    display: none;
    position: relative;
    z-index: 1100;
  }

  .navbar__toggler-icon {
    width: 30px;
    height: 2px;
    background-color: #fff;
    display: block;
    margin: 6px 0;
  }

  .navbar__collapse {
    display: flex;
    align-items: center;
  }

  .navbar__nav {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .navbar__item {
    margin-left: 1rem;
  }

  .navbar__link {
    color: #ffffff;
    font-weight: 400;
    font-size: 14px;
    line-height: 18px;
    text-decoration: none;
    position: relative;
    padding: 0.5rem 0;
    transition: color 0.4s ease;
  }

  .navbar__link::after {
    content: "";
    position: absolute;
    width: 0%;
    height: 2px;
    display: block;
    margin-top: 5px;
    right: 0;
    background: #3db7b0;
    transition: width 0.4s ease;
    -webkit-transition: width 0.4s ease;
  }

  .navbar__link:hover,
  .navbar__link:focus {
    color: #3db7b0;
  }

  .navbar__link:hover::after,
  .navbar__link:focus::after {
    width: 100%;
    left: 0;
    background: #3db7b0;
  }

  @media (max-width: 768px) {
    .navbar__toggler {
      display: block;
      cursor: pointer;
      z-index: 1100;
      padding: 8px;
      background: transparent;
      border: none;
    }

    .navbar__collapse {
      display: none;
      flex-direction: column;
      width: 100%;
      background-color: rgba(
        0,
        0,
        0,
        0.9
      ); /* Fondo más oscuro para mejor visibilidad */
      position: absolute;
      top: 100%;
      left: 0;
      z-index: 1090; /* Alto z-index para aparecer sobre otros elementos */
      padding: 1rem 0; /* Añadir espacio vertical */
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Sombra sutil */
    }

    /* Importante: Esta clase es la que hace que el menú se muestre cuando se agrega vía JavaScript */
    .navbar__collapse.show {
      display: flex !important; /* Usar !important para forzar el display:flex */
    }

    .navbar__nav {
      flex-direction: column; /* Organiza los elementos en columna */
      width: 100%;
      margin: 0;
      padding: 0;
    }

    .navbar__item {
      margin: 0;
      text-align: center;
      padding: 0.75rem;
      width: 100%; /* Ocupa todo el ancho disponible */
      border-bottom: 1px solid rgba(255, 255, 255, 0.1); /* Separador sutil */
    }

    .navbar__item:last-child {
      border-bottom: none; /* Elimina el borde del último elemento */
    }

    .navbar__link {
      display: block;
      padding: 0.5rem;
      width: 100%;
      font-size: 16px; /* Texto más grande para mejor tap target */
    }
  }
</style>
