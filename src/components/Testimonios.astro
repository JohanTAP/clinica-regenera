<section
  class="carousel bg-testimonios py-5"
  id="testimonio"
  aria-labelledby="testimonio-heading"
>
  <h2 id="testimonio-heading" class="visually-hidden">Testimonios</h2>

  <div class="carousel__videos">
    <div class="carousel__video">
      <img
        src="/assets/images/video1-thumbnail.webp"
        alt="Testimonio 1"
      />
      <button class="carousel__play-button">▶</button>
    </div>
    <div class="carousel__video">
      <img
        src="/assets/images/video2-thumbnail.webp"
        alt="Testimonio 2"
      />
      <button class="carousel__play-button">▶</button>
    </div>
    <div class="carousel__video">
      <img src="/assets/images/video-thumb.webp" alt="Testimonio 3" />
      <button class="carousel__play-button">▶</button>
    </div>
  </div>

  <div class="carousel__link">
    <a href="#" id="nextTestimonio" aria-label="Ve más testimonios aquí"
      >Ve más testimonios aquí <span class="carousel__arrow">→</span></a
    >
  </div>
</section>

<style>
  .carousel {
    background-color: #3db7b0;
    color: white;
    padding: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .carousel__videos {
    display: flex;
    justify-content: space-around;
    width: 100%;
    max-width: 1200px;
    margin-bottom: 20px;
  }

  .carousel__video {
    position: relative;
    width: 300px;
    height: 500px;
    border-radius: 15px;
    overflow: hidden;
    background-color: #fff;
  }

  .carousel__video img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 15px;
  }

  .carousel__play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 2rem;
    color: white;
    background-color: rgba(0, 0, 0, 0.5);
    border: none;
    border-radius: 50%;
    width: 60px;
    height: 60px;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
  }

  .carousel__texto {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .carousel__destacado {
    font-weight: bold;
    color: #ffd700;
  }

  .carousel__autor {
    font-size: 1.2rem;
  }

  .carousel__link {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin-top: 20px;
    padding-right: 75px;
  }

  .carousel__link a {
    color: #ffd700;
    text-decoration: none;
    font-weight: bold;
    font-size: 1.2rem;
    position: relative;
    transition: color 0.4s ease;
  }

  .carousel__link a::after {
    content: "";
    position: absolute;
    width: 0%;
    height: 2px;
    display: block;
    margin-top: 5px;
    right: 0;
    background: #fff;
    transition: width 0.4s ease;
  }

  .carousel__link a:hover,
  .carousel__link a:focus {
    color: white;
  }

  .carousel__link a:hover::after,
  .carousel__link a:focus::after {
    width: 100%;
    left: 0;
    background: white;
  }

  .carousel__arrow {
    font-size: 1.5rem;
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }
</style>
