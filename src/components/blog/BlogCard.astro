---
import { Image } from "astro:assets";
import { formatDate } from "../../utils/formatDate";
import type { CollectionEntry } from "astro:content";

interface Props {
    post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { title, description, pubDate, image, author, authorImage } = post.data;

// Crear URLs absolutas para las im√°genes
const imageUrl = new URL(image, Astro.url.origin).href;
const authorImageUrl = authorImage
    ? new URL(authorImage, Astro.url.origin).href
    : "";
---

<article class="blog-card">
    <a href={`/blog/${post.id}`} class="blog-card__link">
        <div class="blog-card__image-container">
            <img
                src={imageUrl}
                alt={title}
                width="400"
                height="250"
                class="blog-card__image"
                loading="lazy"
            />
        </div>
        <div class="blog-card__content">
            <p class="blog-card__date">{formatDate(pubDate)}</p>
            <h2 class="blog-card__title">{title}</h2>
            <p class="blog-card__description">{description}</p>
            <div class="blog-card__author">
                {
                    authorImage && (
                        <img
                            src={authorImageUrl}
                            alt={author}
                            width="40"
                            height="40"
                            class="blog-card__author-image"
                            loading="lazy"
                        />
                    )
                }
                <span class="blog-card__author-name">{author}</span>
            </div>
        </div>
    </a>
</article>

<style>
    .blog-card {
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        margin-bottom: 2rem;
        border: 2px solid transparent;
        height: 100%;
    }

    .blog-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        border-color: #3db7b0;
    }

    .blog-card__link {
        display: block;
        color: inherit;
        text-decoration: none;
        height: 100%;
    }

    .blog-card__image-container {
        height: 250px;
        overflow: hidden;
    }

    .blog-card__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .blog-card:hover .blog-card__image {
        transform: scale(1.05);
    }

    .blog-card__content {
        padding: 1.5rem;
    }

    .blog-card__date {
        font-size: 0.85rem;
        color: #666;
        margin-bottom: 0.5rem;
    }

    .blog-card__title {
        font-size: 1.5rem;
        color: #333;
        margin-bottom: 0.5rem;
        font-weight: 700;
        transition: color 0.3s ease;
    }

    .blog-card:hover .blog-card__title {
        color: #3db7b0;
    }

    .blog-card__description {
        font-size: 1rem;
        color: #555;
        margin-bottom: 1rem;
        line-height: 1.5;
    }

    .blog-card__author {
        display: flex;
        align-items: center;
        margin-top: auto;
    }

    .blog-card__author-image {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 0.75rem;
    }

    .blog-card__author-name {
        font-size: 0.9rem;
        color: #444;
        font-weight: 500;
    }

    @media (max-width: 768px) {
        .blog-card__title {
            font-size: 1.25rem;
        }

        .blog-card__description {
            font-size: 0.9rem;
        }
    }
</style>
