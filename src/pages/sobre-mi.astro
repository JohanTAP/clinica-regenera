<style>
  .sobre-mi-header {
    background: linear-gradient(135deg, #3db7b0, #235d5a);
    color: white;
    text-align: center;
    padding: 4rem 1rem;
  }

  .sobre-mi-header__content h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .sobre-mi-header__content p {
    font-size: 1.2rem;
  }

  .main-background-wrapper {
    background-color: #3db7b017;
    padding: 2rem 0; /* Apply vertical padding here */
  }

  .sobre-mi-main {
    padding: 0 1rem; /* Keep horizontal padding */
    max-width: 900px;
    margin: 0 auto;
  }

  .historia h2,
  .instagram h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #494949;
    text-align: center; /* Added */
  }

  .historia p {
    font-size: 1rem;
    line-height: 1.6;
    color: #555;
  }

  .historia-content {
    display: flex;
    align-items: flex-start; /* Changed from stretch to flex-start */
    gap: 1rem;
  }

  .certificado-img {
    max-width: 450px; /* Increased from 400px */
    object-fit: contain; /* Changed from cover to contain */
    border-radius: 8px;
    margin-top: 16px; /* Added */
  }

  .instagram-background-wrapper {
    /* Added rule for wrapper */
    background-color: #f1f9f9;
    background-image: radial-gradient(#3db7b033 1px, transparent 1px);
    background-size: 15px 15px;
    padding: 3rem 0; /* Apply vertical padding here */
  }

  .instagram {
    padding: 0 1.5rem; /* Keep horizontal padding */
    max-width: 900px;
    margin: 0 auto;
  }

  .instagram-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* Changed to 3 columns */
    gap: 1rem;
  }

  .instagram-link {
    display: block;
    overflow: hidden; /* Para contener el efecto de escala */
    border-radius: 8px;
    aspect-ratio: 1 / 1; /* Mantiene la forma cuadrada */
    position: relative; /* Para posibles overlays futuros */
  }

  .instagram-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Asegura que la imagen cubra el área */
    transition: transform 0.3s ease; /* Transición suave para el hover */
    display: block; /* Evita espacio extra debajo de la imagen */
  }

  .instagram-link:hover .instagram-image {
    transform: scale(1.05); /* Efecto de zoom suave al pasar el mouse */
  }

  /* Estilo para los placeholders restantes */
  .instagram-item {
    background-color: #e6e6e6;
    height: auto; /* La altura se define por aspect-ratio en el grid */
    aspect-ratio: 1 / 1; /* Mantiene la forma cuadrada */
    border-radius: 8px;
  }

  @media (max-width: 768px) {
    .sobre-mi-header__content h1 {
      font-size: 2rem;
    }

    .sobre-mi-header__content p {
      font-size: 1rem;
    }

    .historia-content {
      flex-direction: column;
    }

    .certificado-img {
      max-width: 100%;
    }

    .instagram-grid {
      grid-template-columns: repeat(
        2,
        1fr
      ); /* Ajustar a 2 columnas en móvil si se desea */
    }
  }
</style>
