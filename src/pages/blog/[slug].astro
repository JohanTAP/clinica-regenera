---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import ButtonUp from "../../components/ButtonUp.astro";
import { getCollection } from "astro:content";
import { formatDate } from "../../utils/formatDate";
import { marked } from "marked";
import type { CollectionEntry } from "astro:content";

// Genera las rutas para todas las entradas del blog
export async function getStaticPaths() {
    const blogPosts = await getCollection("blog");

    return blogPosts.map((post) => ({
        params: { slug: post.id },
        props: { post },
    }));
}

// Obtiene la entrada específica del blog desde las props
const { post } = Astro.props as { post: CollectionEntry<"blog"> };
const {
    title,
    description,
    pubDate,
    updatedDate,
    author,
    authorImage,
    image,
    tags,
} = post.data;

// Crear URLs absolutas para las imágenes
const imageUrl = new URL(image, Astro.url.origin).href;
const authorImageUrl = authorImage
    ? new URL(authorImage, Astro.url.origin).href
    : "";

// Renderiza el contenido Markdown a HTML
const content = marked.parse(post.body);
---

<Layout title={`${title} | Blog Clínica Regenera`}>
    <Navbar />
    <div class="scroll-container" id="scroll-container">
        <main class="post-container">
            <article class="post">
                <header class="post-header">
                    <div class="post-header__meta">
                        <p class="post-date">
                            Publicado el {formatDate(pubDate)}
                            {
                                updatedDate &&
                                    ` • Actualizado el ${formatDate(updatedDate)}`
                            }
                        </p>
                        {
                            tags && tags.length > 0 && (
                                <div class="post-tags">
                                    {tags.map((tag) => (
                                        <span class="post-tag">{tag}</span>
                                    ))}
                                </div>
                            )
                        }
                    </div>

                    <h1 class="post-title">{title}</h1>
                    <p class="post-description">{description}</p>

                    <div class="post-author">
                        {
                            authorImage && (
                                <img
                                    src={authorImageUrl}
                                    alt={author}
                                    width="60"
                                    height="60"
                                    class="post-author__image"
                                />
                            )
                        }
                        <span class="post-author__name">Por {author}</span>
                    </div>
                </header>

                <div class="post-featured-image">
                    <img
                        src={imageUrl}
                        alt={title}
                        width="1200"
                        height="630"
                        class="featured-image"
                    />
                </div>

                <div class="post-content">
                    <div set:html={content} />
                </div>

                <footer class="post-footer">
                    <div class="post-nav">
                        <a href="/blog" class="post-nav__link">
                            &larr; Volver al blog
                        </a>
                    </div>

                    <div class="post-share">
                        <p class="post-share__title">
                            Compartir este artículo:
                        </p>
                        <div class="post-share__buttons">
                            <a
                                href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url}`}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="share-button share-button--facebook"
                                aria-label="Compartir en Facebook"
                            >
                                Facebook
                            </a>
                            <a
                                href={`https://twitter.com/intent/tweet?url=${Astro.url}&text=${encodeURIComponent(title)}`}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="share-button share-button--twitter"
                                aria-label="Compartir en Twitter"
                            >
                                Twitter
                            </a>
                            <a
                                href={`https://api.whatsapp.com/send?text=${encodeURIComponent(title + " " + Astro.url)}`}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="share-button share-button--whatsapp"
                                aria-label="Compartir en WhatsApp"
                            >
                                WhatsApp
                            </a>
                        </div>
                    </div>
                </footer>
            </article>
        </main>

        <Footer />
        <ButtonUp />
    </div>
</Layout>

<style>
    .post-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 6rem 2rem 4rem;
    }

    .post-header {
        margin-bottom: 2.5rem;
    }

    .post-header__meta {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .post-date {
        font-size: 0.9rem;
        color: #666;
    }

    .post-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .post-tag {
        font-size: 0.8rem;
        background-color: #e6f7f6;
        color: #3db7b0;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
    }

    .post-title {
        font-size: 2.8rem;
        line-height: 1.2;
        color: #333;
        margin-bottom: 1rem;
        font-weight: 700;
    }

    .post-description {
        font-size: 1.2rem;
        line-height: 1.6;
        color: #555;
        margin-bottom: 1.5rem;
    }

    .post-author {
        display: flex;
        align-items: center;
    }

    .post-author__image {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        margin-right: 1rem;
    }

    .post-author__name {
        font-size: 1rem;
        font-weight: 500;
        color: #444;
    }

    .post-featured-image {
        margin-bottom: 2.5rem;
        border-radius: 15px;
        overflow: hidden;
    }

    .featured-image {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .post-content {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #333;
        margin-bottom: 3rem;
    }

    .post-content :global(h2) {
        font-size: 1.8rem;
        margin: 2rem 0 1rem;
        color: #3db7b0;
    }

    .post-content :global(h3) {
        font-size: 1.4rem;
        margin: 1.75rem 0 0.75rem;
        color: #333;
    }

    .post-content :global(p) {
        margin-bottom: 1.5rem;
    }

    .post-content :global(ul),
    .post-content :global(ol) {
        margin-bottom: 1.5rem;
        padding-left: 2rem;
    }

    .post-content :global(li) {
        margin-bottom: 0.5rem;
    }

    .post-content :global(blockquote) {
        border-left: 4px solid #3db7b0;
        padding-left: 1.5rem;
        margin: 1.5rem 0;
        font-style: italic;
        color: #555;
    }

    .post-content :global(img) {
        max-width: 100%;
        border-radius: 8px;
        margin: 1.5rem 0;
    }

    .post-footer {
        border-top: 1px solid #eee;
        padding-top: 2rem;
    }

    .post-nav {
        margin-bottom: 2rem;
    }

    .post-nav__link {
        color: #3db7b0;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .post-nav__link:hover {
        color: #1b514e;
        text-decoration: underline;
    }

    .post-share {
        margin-top: 2rem;
    }

    .post-share__title {
        font-size: 1rem;
        font-weight: 500;
        margin-bottom: 0.75rem;
        color: #444;
    }

    .post-share__buttons {
        display: flex;
        gap: 1rem;
    }

    .share-button {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        color: white;
        text-decoration: none;
        transition: opacity 0.3s ease;
    }

    .share-button:hover {
        opacity: 0.9;
    }

    .share-button--facebook {
        background-color: #3b5998;
    }

    .share-button--twitter {
        background-color: #1da1f2;
    }

    .share-button--whatsapp {
        background-color: #25d366;
    }

    @media (max-width: 768px) {
        .post-container {
            padding: 5rem 1.5rem 3rem;
        }

        .post-title {
            font-size: 2.2rem;
        }

        .post-description {
            font-size: 1.1rem;
        }

        .post-content {
            font-size: 1rem;
        }

        .post-header__meta {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.75rem;
        }
    }

    @media (max-width: 480px) {
        .post-container {
            padding: 4rem 1rem 2rem;
        }

        .post-title {
            font-size: 1.8rem;
        }

        .post-share__buttons {
            flex-wrap: wrap;
        }
    }
</style>
