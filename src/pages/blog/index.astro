---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import BlogCard from "../../components/blog/BlogCard.astro";
import { getCollection } from "astro:content";
import ButtonUp from "../../components/ButtonUp.astro";

// Obtener todas las entradas del blog ordenadas por fecha de publicación (más recientes primero)
const posts = await getCollection("blog");
const sortedPosts = posts.sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Mostrar solo las últimas 2 entradas
const postsToShow = sortedPosts.slice(0, 2);

// Variables para el diseño de la página
const title = "Blog | Clínica Regenera";
const description =
    "Artículos e información sobre salud, bienestar, quiropraxia, kinesiología, osteopatía y más.";
---

<Layout title={title}>
    <Navbar />
    <div class="scroll-container" id="scroll-container">
        <header class="blog-header">
            <div class="blog-header__overlay"></div>
            <div class="blog-header__content">
                <h1 class="blog-header__title">Blog de Salud y Bienestar</h1>
                <p class="blog-header__description">{description}</p>
            </div>
        </header>

        <div class="blog-background-wrapper">
            <main class="blog-main">
                <div class="blog-grid">
                    {
                        postsToShow.length > 0 ? (
                            postsToShow.map((post) => (
                                <div class="blog-grid__item">
                                    <BlogCard post={post} />
                                </div>
                            ))
                        ) : (
                            <p class="blog-empty">
                                Próximamente publicaremos artículos sobre salud
                                y bienestar. ¡Vuelve pronto!
                            </p>
                        )
                    }
                </div>
                <!-- Aquí se podría añadir la lógica de paginación completa en el futuro -->
            </main>
        </div>

        <Footer />
        <ButtonUp />
    </div>
</Layout>

<style>
    .blog-header {
        position: relative; /* Needed for overlay */
        background-size: cover;
        background-position: center;
        color: white;
        padding: 6rem 2rem 4rem;
        text-align: center;
        margin-bottom: 0; /* Remove margin as background-wrapper will handle spacing */
    }

    .blog-header__overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            135deg,
            rgba(61, 183, 176, 0.85),
            rgba(35, 93, 90, 0.85)
        ); /* Gradient overlay similar to contacto */
        z-index: 1;
    }

    .blog-header__content {
        position: relative; /* Ensure content is above overlay */
        z-index: 2;
        max-width: 800px;
        margin: 0 auto;
    }

    .blog-header__title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .blog-header__description {
        font-size: 1.2rem;
        line-height: 1.6;
        margin-bottom: 0; /* Remove bottom margin */
    }

    .blog-background-wrapper {
        background-color: #f1f9f9; /* Match contacto */
        background-image: radial-gradient(
            #3db7b033 1px,
            transparent 1px
        ); /* Dotted background */
        background-size: 15px 15px;
        padding: 3rem 1.5rem 4rem; /* Add padding top/bottom */
    }

    .blog-main {
        max-width: 1200px;
        margin: 0 auto;
        /* padding removed, handled by blog-background-wrapper */
    }

    .blog-grid {
        display: grid;
        grid-template-columns: repeat(
            auto-fit,
            minmax(300px, 1fr)
        ); /* Responsive columns */
        gap: 2rem;
        justify-content: center; /* Center grid items horizontally */
    }

    .blog-grid__item {
        /* Ensures cards take full height if needed, useful for alignment */
        display: flex;
    }

    .blog-empty {
        grid-column: 1 / -1;
        text-align: center;
        padding: 3rem;
        background-color: #f5f5f5;
        border-radius: 15px;
        font-size: 1.2rem;
        color: #666;
    }

    @media (max-width: 1024px) {
        /* Adjust grid for 2 columns if auto-fit doesn't behave as desired */
        /* .blog-grid {
            grid-template-columns: repeat(2, 1fr);
        } */
        .blog-header__title {
            font-size: 2.5rem;
        }
    }

    @media (max-width: 768px) {
        .blog-header {
            padding: 5rem 1.5rem 3rem;
        }

        .blog-header__title {
            font-size: 2rem;
        }

        .blog-header__description {
            font-size: 1rem;
        }
        .blog-background-wrapper {
            padding: 2rem 1rem 3rem;
        }
    }

    @media (max-width: 600px) {
        .blog-grid {
            /* Ensure single column on small screens */
            grid-template-columns: 1fr;
        }
        .blog-background-wrapper {
            padding: 2rem 1rem 3rem;
        }
    }
</style>
